
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="~/Content/datatables.net-bs4/css/responsive.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/datatables.net-bs4/css/jquery-ui.css" rel="stylesheet" />

<div class="container mt-3">
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
        <label class="form-check-label" for="flexSwitchCheckChecked">Checked switch checkbox input</label>
    </div><br />
    <div class="row">
        <div class="col-md-9">
            <div class="input-group">
                <input class="form-control border-end-0 border rounded-pill" type="search" placeholder="search" id="example-search-input">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table id="tblPostDetails" class="table table-bordered table-striped table-hover dataTable">
                <thead>
                    <tr class="align-middle">
                        <td></td>
                    </tr>
                </thead>
                <tbody class="js-sweetalert"></tbody>
            </table>
        </div>
        <div class="col-md-3">
            <div class="container mt-3">
                <div class="card border-light text-primary mb-3"
                     style="max-width: 18rem;">
                    <div class="card-header">
                        Hot Question topics
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            This is card title
                        </h5>
                        <p class="card-text">
                            This is the body of the card
                            made using Bootstrap Classes.
                        </p>

                    </div>
                </div>
                <div class="card border-light text-primary mb-3"
                     style="max-width: 18rem;">
                    <div class="card-header">
                        Related Tags
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            This is card title
                        </h5>
                        <p class="card-text">
                            This is the body of the card
                            made using Bootstrap Classes.
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @*<div class="small fw-light">All Aticles</div>*@


    </div>

</div>
@section scripts{
    @Scripts.Render("~/Scripts/Datatable")
}

<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/dashboard.js"></script>
<script>
    $(document).ready(function () {
        $('#tblPostDetails_filter').hide();
        $('#tblPostDetails_length').hide();
        $('#example-search-input').keyup(function () {
            table.search($(this).val()).draw();
        })
    });
</script>

