
@{
    ViewBag.Title = "PostRead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container border py-3 my-3">
    <b><p id="Title"></p></b><br />
    <i class="fa fa-calendar" aria-hidden="true"> </i><a class="calendar" rel="calendar" href="#" title="">15 Mar 2023</a>
    <i class="fa fa-user fa" aria-hidden="true"> </i><a class="user" rel="user" href="#" title="">Amar Sutar</a>
    <i class="fa fa-comments fa-fw" aria-hidden="true"> </i><a class="comments" rel="comments" href="#" title=""><span id="spComments"></span></a>
    <i class="fa fa-eye fa-fw" aria-hidden="true"> </i><a class="eye" rel="eye" href="#" title=""><span id="spView"></span></a>
    @*<span class="fa fa-user fa"> Amar Sutar</span><span class="fa fa-comments fa-fw">0</span><span class="fa fa-eye fa-fw">1000</span>*@
</div>
<div class="container border py-3 my-3">
    <div class="row">

        <div class="mb-3 mt-3">
            <div class="col-md-10">
                <div id="txtContent"></div>
                <input type="hidden" id="hdnASKED_QUESTIONS_ID" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 mt-3">
            <div id="commenttable"></div>
        </div>
    </div>
</div>

<div class="container border py-3 my-3">
    <h4>Share your valuable answer.</h4>
    <div class="row">

        <div class="mb-3 mt-3">
            <div class="col-md-10">
                <textarea class="form-control" id="txtComment" name="txtComment" rows="3"></textarea>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 mt-3">
            <div class="col-md-10 JustifyLeft">
                <button type="button" onclick="PostAnswer();" class="btn btn-primary btn-lg JustifyLeft">Post Your Answer </button>
            </div>
        </div>
    </div>

   
</div>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<script src="~/Areas/Questions/JS/ReadQuestion.js"></script>
<script>CKEDITOR.replace("txtComment");</script>
<script>
    var PostID = '';

    $(document).ready(function () {
        PostID = getParameterByName('id');
        ReadQuestion(PostID);
        $('#hdnASKED_QUESTIONS_ID').val(PostID);
        GetAnswer(PostID);
    });

    function getParameterByName(name) {
        name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
        var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
            results = regex.exec(location.search);
        return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

</script>

